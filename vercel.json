{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["public/**", "views/**"],
        "distDir": "."  
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",  
      "dest": "server.js" 
    },
    { 
      "src": "/(.*)",     
      "dest": "/public/$1" 
    }
  ]
}
